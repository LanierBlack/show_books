<%- include header -%>
  <% if (book.comments.length > 0) { %>
    <ul class="comments">
      <% book.comments.forEach(function (comment) { %>
        <% if (!comment.isPrivate || book.username === user.name) { %>
          <li class="comment">
            <div class="commentContent"><%- comment.comment %></div>
            <% if (book.username === user.name) { %>
              <button class="removeBtn removeComment">删除笔记</button>
              <input type="text" disabled class="commentId" value=<%- comment._id %> style="display: none;" %> />
            <% } %>
          </li>
        <% } %>
      <% }) %>
    </ul>
    <script>
      <%- include ../node_modules/markdown/lib/markdown.js %>
    </script>
  <% } else if (user.name === username) { %>
    <div class="center nocomment">
      <h4>你还没有写过这本书的笔记</h4>
      <button type="button" class="createCommentBtn">创建笔记</button>
    </div>
  <% } else { %>
    <div class="center nocomment">
      <h4>收藏者还没有写过这本书的笔记</h4>
    </div>
  <% } %>
<%- include footer -%>
